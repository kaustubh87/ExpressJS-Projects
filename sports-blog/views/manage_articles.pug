extends layout

block content
  .container
    .row
      .col-md-9
        h1 #{title}
      .col-md-3
        a(class="btn btn-default create-btn", href="/manage/articles/add") Add Article
    table(class='table table-striped')
      tr
        th Article Title
        th
      each article, i in articles
        tr
          td #{article.title}
          td
            a(class='btn btn-tiny btn-default' href='/manage/articles/edit/'+article._id) Edit
