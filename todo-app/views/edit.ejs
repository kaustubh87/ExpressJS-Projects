<form method="post" action="/todo/edit/<%= todo._id %>">
  <div class="form-group">
    <label for="todo_name">Todo Name:</label>
    <input type="text" class="form-control"  name="text" value="<%= todo.text %>">
  </div>
  <div class="form-group">
    <label for="todo_text">Todo Text:</label>
    <input type="text" class="form-control" name="body" value="<%= todo.body %>">
  </div>
  <button type="submit" class="btn btn-default">Submit</button> <a href="/">Cancel</a>
</form>
</div>
